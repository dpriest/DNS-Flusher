{
	"name": "DNS Flusher for Chrome",
	"manifest_version": 2,
	"version": "1.0.1",
	"default_locale": "en",
	"description": "__MSG_extDescription__",
	"background": {
		"page": "background.html"
	},
	"options_page": "dns-flusher-options.html",
	"browser_action": {
		"default_title": "DNS Flusher for Chrome",
		"default_icon": "icon19.png"
	},
	"icons": { 
		"16": "icon19.png",
        "48": "icon48.png",
        "128": "icon128.png" 
	},
	"permissions": [
		"tabs",
	    "http://*/*",
	    "https://*/*"
	]
}

